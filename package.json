{
  "name": "lto-api",
  "version": "0.0.0",
  "description": "LTO library to generate key pairs and sign events",
  "scripts": {
    "_build-partial": "node_modules/.bin/browserify raw/LTO.js --im -s LTO -u parse-json-bignumber -u bignumber.js -u crypto -u node-fetch -u ts-utils -u ts-api-validator > ./dist/lto-api.partial.js",
    "_build-full": "node_modules/.bin/browserify raw/LTO.js --im -s LTO -u crypto -u node-fetch > ./dist/lto-api.js",
    "build": "npm run compile && mkdir -p dist && npm run _build-partial && npm run _build-full && npm run terser",
    "compile": "mkdir -p raw && ./node_modules/.bin/tsc -p ./tsconfig.json --declaration --outDir raw",
    "terser": "node_modules/.bin/terser ./dist/lto-api.js -o ./dist/lto-api.min.js && node_modules/.bin/terser ./dist/lto-api.partial.js -o ./dist/lto-api.partial.min.js ",
    "test": "node_modules/.bin/mocha --require ts-node/register test/*.spec.ts",
    "preversion": "npm version from-git --no-git-tag-version --no-commit-hooks"
  },
  "author": "Sven Stam",
  "license": "MIT",
  "main": "dist/lto-api.min.js",
  "types": "raw/LTO.d.ts",
  "dependencies": {
    "@lto-network/lto-transactions": "^1.2.7",
    "bignumber.js": "^4.1.0",
    "crypto-js": "^3.1.9-1",
    "js-sha256": "^0.9.0",
    "node-fetch": "^2.2.0",
    "parse-json-bignumber": "0.0.2",
    "ts-api-validator": "^2.1.0",
    "ts-utils": "^6.0.4",
    "tweetnacl": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^15.12.2",
    "@types/sinon": "^4.3.3",
    "browserify": "^16.2.3",
    "chai": "^4.1.2",
    "mocha": "^5.0.4",
    "requirejs": "^2.3.5",
    "sinon": "^4.5.0",
    "terser": "^5.7.0",
    "ts-node": "^5.0.1",
    "typescript": "^3.9.9"
  }
}
